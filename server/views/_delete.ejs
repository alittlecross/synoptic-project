<script src="https://code.jquery.com/jquery-3.4.1.js"></script>

<script>
  deleteContainer = button => {
    const container = $(`#${button.getAttribute('data-container')}`)
    const ol = container.parent()

    container.remove()

    const groupClassName = ol.parent()[0].className
    const containerCount = $(`div.${groupClassName} > ol > div.${container[0].className}`).length
    const addButton = ol.children().last()[0]

    if (groupClassName === 'questions' && containerCount === 1) {
      addAnswer(addButton)
    } else if (!containerCount) {
      addQuestion(addButton)
    }
  }
</script> 
