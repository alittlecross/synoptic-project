<script>
  deleteContainer = button => {
    const container = $(`#${$(button).attr('data-container')}`)
    const ol = container.parent()

    container.remove()

    const containers = $(`div#${ol.parent().attr('id')} > ol > div.${container.attr('class')}`)
    const count = containers.length
    const addButton = ol.children().last()

    addButton.detach()

    const groupClassName = ol.parent().attr('class')

    if (count) {
      containers[count - 1].after(addButton[0])
    } else {
      ol.append(addButton[0])
    }

    if (groupClassName === 'questions' && count === 1) {
      addAnswer(addButton[0])
    } else if (!count) {
      addQuestion(addButton[0])
    }
  }
</script> 
