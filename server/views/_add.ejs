<script>
  addAnswer = button => {
    const container = button.parentNode.parentNode
    
    const question = container.getAttribute('id')
    const number = parseInt(container.getAttribute('data-answer-number')) + 1

    container.setAttribute('data-answer-number', number)

    button.insertAdjacentHTML('beforebegin', `
      <div id="${question}-newAnswer-${number}" class="answers">
        <li class="answer"><input class="answer" type="text" name="${question}-newAnswer-${number}" placeholder="Answer" required></li>
        <div class="correct">
          <input id="${question}-correct-answer-${number}" type="radio" name="${question}-correct-answer" value="${question}-newAnswer-${number}" required>
          <label for="${question}-correct-answer-${number}">Correct</label>
        </div>
        <button class="delete" type="button" data-container="${question}-newAnswer-${number}" onclick="deleteContainer(this)">Delete this answer</button>
      </div>
    `)
  }

  addQuestion = button => {
    const container = button.parentNode.parentNode
    const number = parseInt(container.getAttribute('data-question-number')) + 1

    container.setAttribute('data-question-number', number)

    button.insertAdjacentHTML('beforebegin', `
      <div id="newQuestion-${number}" class="questions" data-answer-number="2" >
        <li class="question"><input class="question" type="text" name="newQuestion-${number}" placeholder="Question" required></li>
        <ol type="A">

        <div id="newQuestion-${number}-newAnswer-1" class="answers">
          <li class="answer" ><input class="answer" type="text" name="newQuestion-${number}-newAnswer-1" placeholder="Answer" required></li>
          <div class="correct">
            <input id="newQuestion-${number}-correct-answer-1" type="radio" name="newQuestion-${number}-correct-answer" value="newQuestion-${number}-newAnswer-1" required>
            <label for="newQuestion-${number}-correct-answer-1">Correct</label>
          </div>
          <button class="delete" type="button" data-container="newQuestion-${number}-newAnswer-1" onclick="deleteContainer(this)">Delete this answer</button>
        </div>

        <div id="newQuestion-${number}-newAnswer-2" class="answers">
          <li class="answer" ><input class="answer" type="text" name="newQuestion-${number}-newAnswer-2" placeholder="Answer" required></li>
          <div class="correct">
            <input id="newQuestion-${number}-correct-answer-2" type="radio" name="newQuestion-${number}-correct-answer" value="newQuestion-${number}-newAnswer-2" required>
            <label for="newQuestion-${number}-correct-answer-2">Correct</label>
          </div>
          <button class="delete" type="button" data-container="newQuestion-${number}-newAnswer-2" onclick="deleteContainer(this)">Delete this answer</button>
        </div>

        <button class="add" type="button"onclick="addAnswer(this)">Add another answer</button>
        </ol>
        <span class="dash">- - - - - - - - - - - - - - -</span>
        <button class="delete" type="button" data-container="newQuestion-${number}" onclick="deleteContainer(this)">Delete this question</button>
      </div>
    `)
  }
</script>
